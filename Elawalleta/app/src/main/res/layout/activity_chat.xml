<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e0e8"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:background="#0070C9">
        <ImageView
            android:id="@+id/searchFriend"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:onClick="back"
            android:src="@drawable/back" />
    </RelativeLayout>
    <ListView
        android:id="@+id/msg_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#0000">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:height="70dp"
        android:background="#f5f5f5"
        android:paddingBottom="6dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_set_mode_keyboard"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/ease_chatting_setmode_keyboard_btn_normal"/>
        <EditText
            android:id="@+id/input_text"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:height="40dp"
            android:layout_weight="5"
            android:background="@drawable/bm_bg_et"
            android:textColor="#333"
            android:bottom="2dp"
            android:hint="输入内容"
            android:maxLines="1"/>
        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#5fae10"
            android:textColor="#fff"
            android:visibility="gone"
            android:text="发送"/>
        <Button
            android:id="@+id/btn_more"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ease_type_select_btn" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottommenu"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="#f5f5f5"
        android:paddingBottom="6dp">


        <RelativeLayout
            android:id="@+id/titlec"
            android:layout_width="wrap_content"
            android:layout_height="105sp"
            android:layout_alignParentTop="true"
            android:background="#f5f5f5">


                <ImageView
                    android:id="@+id/zhuanzhang"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    android:layout_margin="10dp"
                    android:src="@drawable/elazz" />


            <TextView
                android:id="@+id/firendname"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="转账"
                android:layout_marginTop="69dp"
                android:textColor="#444"
                android:textAlignment="center"
                android:textSize="12sp" />
        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/titlee"
            android:layout_width="wrap_content"
            android:layout_height="105sp"
            android:layout_alignParentTop="true"
            android:background="#f5f5f5">


            <ImageView
                android:id="@+id/zhuanzhangaa"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/videobtn" />


            <TextView
                android:id="@+id/firendnameaa"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textAlignment="center"
                android:layout_marginTop="69dp"
                android:textColor="#444"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/titlef"
            android:layout_width="wrap_content"
            android:layout_height="105sp"
            android:layout_alignParentTop="true"
            android:background="#f5f5f5">


            <ImageView
                android:id="@+id/zhuanzhangaaf"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/audiobtn" />


            <TextView
                android:id="@+id/firendnameaad"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="语音"
                android:textAlignment="center"
                android:layout_marginTop="69dp"
                android:textColor="#444"
                android:textSize="12sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/titled"
            android:layout_width="wrap_content"
            android:layout_height="105sp"
            android:layout_alignParentTop="true"
            android:background="#f5f5f5">


            <ImageView
                android:id="@+id/zhuanzhanga"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/tfile" />

            <TextView
                android:id="@+id/firendnamea"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="文件"
                android:textAlignment="center"
                android:layout_marginTop="69dp"
                android:textColor="#444"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>